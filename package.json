{
    "name": "nest-typescript-starter",
    "private": true,
    "version": "1.0.0",
    "description": "Nest TypeScript starter repository",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docker:start": "cross-env NODE_ENV=production pm2-docker start process.yml --only api",
        "docker:start:dev": "sudo docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
        "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
        "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
        "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
        "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert"
    },
    "dependencies": {
        "@golevelup/nestjs-rabbitmq": "^1.19.0",
        "@nestjs/bull": "^0.4.2",
        "@nestjs/common": "^8.2.4",
        "@nestjs/config": "^1.1.5",
        "@nestjs/core": "^8.2.4",
        "@nestjs/mapped-types": "1.0.1",
        "@nestjs/platform-fastify": "^8.2.4",
        "@nestjs/schedule": "^1.0.2",
        "@nestjs/swagger": "^5.1.5",
        "@svtslv/nestjs-ioredis": "^1.0.2",
        "@types/uuid": "^8.3.3",
        "agora-access-token": "^2.0.4",
        "bigint-base-converter": "^0.1.3",
        "bull": "^4.2.0",
        "change-case": "^4.1.2",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "convert-csv-to-array": "^1.0.3",
        "dotenv": "^10.0.0",
        "fastify-swagger": "^4.13.0",
        "geolib": "^3.3.3",
        "in-app-purchase": "^1.11.4",
        "ioredis": "^4.28.2",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "mysql": "^2.18.1",
        "nestjs-typeorm-paginate": "^3.1.3",
        "node-fetch": "^3.1.0",
        "npx": "^10.2.2",
        "onesignal-node": "^3.3.0",
        "parse-redis-url-simple": "^1.0.2",
        "query-string": "^7.0.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.1",
        "typeorm": "^0.2.41",
        "typeorm-adapter": "^1.4.2",
        "typeorm-model-generator": "^0.4.6",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.1.6",
        "@nestjs/schematics": "^8.0.5",
        "@nestjs/testing": "^8.2.4",
        "@nestjs/typeorm": "^8.0.2",
        "@types/bull": "^3.15.7",
        "@types/cron": "^1.7.3",
        "@types/ioredis": "^4.28.5",
        "@types/jest": "^27.0.3",
        "@types/node": "^17.0.5",
        "@types/readable-stream": "2.3.12",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.4.5",
        "prettier": "^2.5.1",
        "supertest": "^6.1.6",
        "ts-jest": "^27.1.2",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}